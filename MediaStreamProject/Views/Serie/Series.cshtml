        <h3>Humour</h3>
    <div class="ContainerFlexWrapAffiche">
        @foreach (MediaStreamProject.Models.Serie serie in ViewBag.Serie)
        {
            if (serie.Genre == MediaStreamProject.Models.Genre.Humour)
            {
        <div class="ContainerFlexColumn">
            <a href="~/Serie/Seasons/@serie.Id">
                <img src="../@serie.Image" class="Vignette" />
            </a>
            <br />
            @serie.Title
            @switch (serie.Note)
            {
                case 1:
                    note = "★";
                    break;
                case 2:
                    note = "★★";
                    break;
                case 3:
                    note = "★★★";
                    break;
                case 4:
                    note = "★★★★";
                    break;
                case 5:
                    note = "★★★★★";
                    break;
                default:
                    break;
            }
            <p>Note : @note</p>
            <a href="~/Serie/NoterSerie/@serie.Id" class="btn btn-danger">Noter cette série</a>
        </div>
            }
        }
