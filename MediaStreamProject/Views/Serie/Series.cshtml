@model MediaStreamProject.Models.Model1
    @{ string note = " ";}

@*Affiche les Series par genre*@
<div class="ContainerFlexColumn">
    <h1>Séries</h1>
    <h3>Action</h3>
    <div class="ContainerFlexWrapAffiche">
        @foreach (MediaStreamProject.Models.Serie serie in ViewBag.Serie)
        {
            if (serie.Genre == MediaStreamProject.Models.Genre.Action)
            {
                <div class="ContainerFlexColumn">
                    <a href="~/Serie/Seasons/@serie.Id">
                        <img src="../@serie.Image" class="Vignette"/>
                    </a>
                    <br />
                    @serie.Title
                </div>
            }
        }
    </div>

